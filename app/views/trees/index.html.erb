  <div class="main-container">
    <% @trees.each do |tree| %>
      <div class="card" style=" background-image: url('<%= cl_image_path(tree.photo.key) %>'); background-position: center; background-size: cover;">
        <div class="card-pic">
        </div>
        <div class="card-content">
          <h1><%= tree.name  %></h1>
          <div class="card-content">
          <p>Number of Guests: <%= tree.number_of_guests %></p>
          <p>Price: <%= tree.price.to_i %></p>
          <p>Rating: <%= tree.rating %></p>

          <%= link_to "Book a Treehouse", tree_path(tree), class:"btn-red" %>
          <h4 class="btn-card">Book</h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>



